extends ../layout

block content
  br
  br
  for article in allArticles
    #inline
      table
        thead(style='background-image: url(' + article.url  +');')
            tr
            if article.colors === "checked"
              th 
                a(href="/more", style='color: white')= article.name
            else 
              th
                a(href="/more", style='color: black')= article.name

        tbody
            tr
              td= article.excerpt
              
            
              
              
              
  

  #inline
    h1= title
    p Welcome to #{title}

    a(href="/new") Create New Article
